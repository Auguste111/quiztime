<Window x:Class="quiztime.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiztime - Quiz Beheer" Height="700" Width="1000"
        Background="#F2F7F2"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ControlTemplate x:Key="RoundedButtonTemplate" TargetType="Button">
            <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </ControlTemplate>

        <ControlTemplate x:Key="SmallRoundedButtonTemplate" TargetType="Button">
            <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </ControlTemplate>

        <ControlTemplate x:Key="ListBoxItemTemplate" TargetType="ListBoxItem">
            <Border Background="{TemplateBinding Background}" 
                    BorderBrush="#E0D5C7" 
                    BorderThickness="1" 
                    CornerRadius="6" 
                    Margin="{TemplateBinding Margin}"
                    Padding="{TemplateBinding Padding}">
                <ContentPresenter/>
            </Border>
        </ControlTemplate>

        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="#8E5572"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15 12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template" Value="{StaticResource RoundedButtonTemplate}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A66B8C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="Button" x:Key="SecondaryButton">
            <Setter Property="Background" Value="#C2B97F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="12 10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template" Value="{StaticResource SmallRoundedButtonTemplate}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D4CAA0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BCAA99"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0 5 0 5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template" Value="{StaticResource ListBoxItemTemplate}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#8E5572"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F0E8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0 0 0 30">
            <TextBlock Text="Quiztime" 
                       FontSize="42" 
                       FontWeight="Bold" 
                       Foreground="#8E5572"
                       Margin="0 0 0 10"/>
            <TextBlock Text="Beheer je quizzen, start quizzen en maak je pub blij!" 
                       FontSize="16" 
                       Foreground="#88665D"
                       FontStyle="Italic"/>
        </StackPanel>

        <!-- Info box -->
        <Border Grid.Row="1" 
                Background="#C2B97F" 
                CornerRadius="8" 
                Padding="20" 
                Margin="0 0 0 30"
                Opacity="0.15"/>

        <!-- Main content - Quizzen lijst -->
        <Grid Grid.Row="2" Margin="0 0 0 30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*" MinWidth="280"/>
            </Grid.ColumnDefinitions>

            <!-- Linker: Quiz List -->
            <StackPanel Grid.Column="0" Margin="0 0 30 0">
                <TextBlock Text="Beschikbare Quizzen" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#88665D"
                           Margin="0 0 0 15"/>
                <ListBox x:Name="QuizList" 
                         DisplayMemberPath="Naam" 
                         Height="350"
                         Foreground="#333333"/>
            </StackPanel>

            <!-- Rechter: Action buttons -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Acties" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#88665D"
                           Margin="0 0 0 15"/>
                
                <!-- Quiz starten button (groot) -->
                <Button Content="START QUIZ" 
                        Click="StartQuiz_Click" 
                        Style="{StaticResource PrimaryButton}"
                        FontSize="16"
                        Padding="15 20"
                        Margin="0 0 0 12"
                        Height="60"
                        Background="#8E5572"/>
                
                <!-- Andere acties buttons -->
                <Button Content="Bewerk Quiz" 
                        Click="EditQuiz_Click" 
                        Style="{StaticResource SecondaryButton}"
                        Margin="0 0 0 8"
                        Height="45"/>
                
                <Button Content="Verwijder Quiz" 
                        Click="DeleteQuiz_Click" 
                        Style="{StaticResource SecondaryButton}"
                        Background="#88665D"
                        Margin="0 0 0 8"
                        Height="45"/>
                
                <Button Content="Nieuwe Quiz" 
                        Click="NewQuiz_Click" 
                        Style="{StaticResource SecondaryButton}"
                        Background="#BCAA99"
                        Height="45"/>
            </StackPanel>
        </Grid>

        <!-- Footer -->
        <TextBlock Grid.Row="3"
                   Text="Kies een quiz om te beginnen"
                   FontSize="12"
                   Foreground="#BCAA99"
                   TextAlignment="Center"
                   FontStyle="Italic"/>
    </Grid>
</Window>
