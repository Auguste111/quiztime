<Window x:Class="quiztime.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiztime - Start" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Kies een quiz" FontSize="24" Margin="0 0 0 20"/>
            <ListBox x:Name="QuizList" DisplayMemberPath="Naam" Height="200"/>
            <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                <Button Content="+ Nieuwe Quiz" Click="NewQuiz_Click" Width="120" Margin="0 0 10 0"/>
                <Button Content="Start Quiz" Click="StartQuiz_Click" Width="100" Margin="0 0 10 0"/>
                <Button Content="Bewerk Quiz" Click="EditQuiz_Click" Width="100" Margin="0 0 10 0"/>
                <Button Content="Verwijder Quiz" Click="DeleteQuiz_Click" Width="120"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
