<Window x:Class="quiztime.Views.DisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:quiztime.Views"
        WindowStyle="SingleBorderWindow"
        Background="#1A1A2E">
    <Window.Resources>
        <local:CorrectAnswerColorConverter x:Key="CorrectAnswerColorConverter"/>
        <Style TargetType="TextBlock" x:Key="VraagStyle">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Border" x:Key="AntwoordBorder">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Background" Value="#16213E"/>
            <Setter Property="BorderBrush" Value="#0F3460"/>
            <Setter Property="BorderThickness" Value="3"/>
        </Style>
    </Window.Resources>

    <Grid Background="#1A1A2E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Vraag (kleiner) -->
        <Border Grid.Row="0" Background="#0F3460" Padding="20" Margin="0 0 0 10">
            <StackPanel VerticalAlignment="Center">
                <TextBlock x:Name="VraagText"
                           Style="{StaticResource VraagStyle}"
                           Text="Wachtend op vraag..."
                           Margin="0 0 0 10"/>
                <!-- Foto (GROOT!) -->
                <Image x:Name="VraagAfbeelding"
                       Height="350"
                       Stretch="Uniform"
                       Margin="0 0 0 0"
                       Visibility="Collapsed"/>
            </StackPanel>
        </Border>

        <!-- Antwoorden Grid (2x2) -->
        <ItemsControl x:Name="AntwoordLijst" Grid.Row="1" Margin="20">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2" Rows="2"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border x:Name="AntwoordBorder"
                            Style="{StaticResource AntwoordBorder}">
                        <Border.Background>
                            <MultiBinding Converter="{StaticResource CorrectAnswerColorConverter}">
                                <Binding Path="IsCorrect"/>
                                <Binding Path="DataContext.IsShowingCorrectAnswer" RelativeSource="{RelativeSource AncestorType=Window}"/>
                            </MultiBinding>
                        </Border.Background>
                        <TextBlock Text="{Binding Tekst}"
                                   FontSize="32"
                                   Foreground="White"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Correct Antwoord Display (verborgen totdat "Toon Antwoord" wordt geklikt) -->

        <!-- Timer -->
        <TextBlock x:Name="TimerLabel"
                   FontSize="36"
                   Foreground="#FF9800"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="40"
                   FontWeight="Bold"
                   Grid.Row="0"/>
    </Grid>
</Window>
