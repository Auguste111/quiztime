<Window x:Class="quiztime.Views.DisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:quiztime.Views"
        WindowStyle="SingleBorderWindow"
        Background="#1A1A2E">
    <Window.Resources>
        <local:CorrectAnswerColorConverter x:Key="CorrectAnswerColorConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Style TargetType="TextBlock" x:Key="VraagStyle">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="MaxHeight" Value="120"/>
        </Style>
        <Style TargetType="Border" x:Key="AntwoordBorder">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Background" Value="#16213E"/>
            <Setter Property="BorderBrush" Value="#0F3460"/>
            <Setter Property="BorderThickness" Value="3"/>
        </Style>
    </Window.Resources>

    <Grid Background="#1A1A2E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- WACHTSCHERM (toont alleen als IsWaiting = true) -->
        <Grid Grid.Row="0" Grid.RowSpan="4" Background="#1A1A2E" Visibility="{Binding IsWaiting, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Pub Quiz" 
                           FontSize="72" 
                           FontWeight="Bold" 
                           Foreground="#FF9800"
                           TextAlignment="Center"
                           Margin="0 0 0 30"/>
                <TextBlock Text="Wacht tot er een quiz wordt gekozen..." 
                           FontSize="36" 
                           Foreground="White"
                           TextAlignment="Center"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>

        <!-- EINDSCHERM (toont alleen als IsQuizEnded = true) -->
        <Grid Grid.Row="0" Grid.RowSpan="4" Background="#1A1A2E" Visibility="{Binding IsQuizEnded, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="🎉" 
                           FontSize="120" 
                           TextAlignment="Center"
                           Margin="0 0 0 20"/>
                <TextBlock Text="Quiz Beëindigd!" 
                           FontSize="72" 
                           FontWeight="Bold" 
                           Foreground="#FF9800"
                           TextAlignment="Center"
                           Margin="0 0 0 30"/>
                <TextBlock Text="Bedankt voor het spelen!" 
                           FontSize="48" 
                           Foreground="White"
                           TextAlignment="Center"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>

        <!-- Vraag (kleiner) -->
        <Border Grid.Row="0" Background="#0F3460" Padding="20" Margin="0 0 0 10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel VerticalAlignment="Center" MaxHeight="300">
                    <TextBlock x:Name="VraagText"
                               Style="{StaticResource VraagStyle}"
                               Text="Wachtend op vraag..."
                               Margin="0 0 0 10"/>
                    <!-- Foto - responsive sizing -->
                    <Image x:Name="VraagAfbeelding"
                           MaxWidth="800"
                           MaxHeight="280"
                           Stretch="Uniform"
                           Margin="0 0 0 0"
                           Visibility="Collapsed"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Antwoorden Grid (2x2) -->
        <ItemsControl x:Name="AntwoordLijst" Grid.Row="1" Margin="20">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2" Rows="2"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border x:Name="AntwoordBorder"
                            Style="{StaticResource AntwoordBorder}">
                        <Border.Background>
                            <MultiBinding Converter="{StaticResource CorrectAnswerColorConverter}">
                                <Binding Path="IsCorrect"/>
                                <Binding Path="DataContext.IsShowingCorrectAnswer" RelativeSource="{RelativeSource AncestorType=Window}"/>
                            </MultiBinding>
                        </Border.Background>
                        <TextBlock Text="{Binding Tekst}"
                                   FontSize="24"
                                   Foreground="White"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   MaxHeight="100"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Correct Antwoord Display (verborgen totdat "Toon Antwoord" wordt geklikt) -->

        <!-- Timer -->
        <TextBlock x:Name="TimerLabel"
                   FontSize="36"
                   Foreground="#FF9800"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="40"
                   FontWeight="Bold"
                   Grid.Row="0"/>
    </Grid>
</Window>
